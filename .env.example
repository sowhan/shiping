# Application Configuration
APP_NAME=Maritime Route Planner
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Settings (PostgreSQL with PostGIS)
DATABASE_URL=postgresql+asyncpg://maritime:maritime123@localhost:5432/maritime_routes
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache Settings
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=1800

# Security Settings
SECRET_KEY=change-this-in-production-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Settings
ROUTE_CALCULATION_TIMEOUT_SECONDS=30
MAX_ROUTE_ALTERNATIVES=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
